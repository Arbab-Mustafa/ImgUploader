{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "DATABASE_URL": "@DATABASE_URL" // Reference to Vercel's environment variable (to be configured in Vercel's UI)
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1" // Automatically handles backend API routes
    },
    {
      "src": "/(.*)",
      "dest": "/$1" // This will handle the frontend routes
    }
  ]
}
