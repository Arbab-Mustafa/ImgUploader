{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "DATABASE_URL": "@DATABASE_URL" // Use Vercel's environment variable setting (Don't hardcode it here)
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1" // Handles the API routes
    },
    {
      "src": "/(.*)",
      "dest": "/$1" // Handles the frontend routes
    }
  ]
}
